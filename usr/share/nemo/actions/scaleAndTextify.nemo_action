[Nemo Action]
# **** REQUIRED ****
Name=Scale and Greyscale Image

# %N can be used as with the Name field, same rules apply
Comment=Create a scaled copy at 1200 pixels, and convert to greyscale

# **** REQUIRED ****
Exec=scale-image --greyscale %F

Icon-Name=zoom-best-fit

# [S]ingle
# [M]ultiple
# Any
# NotNone
# None (background click)
# or a number defining exact # of files
# Defaults to Single if this field is missing
Selection=NotNone

# **** REQUIRED ****
# semicolon-separated
# case-INsensitive
# 'dir', 'any', 'none' are valid
Extensions=jpg;gif;png;bmp;

