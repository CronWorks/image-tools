#!/usr/bin/env python

import sys

# always add the 0 index
realArgs = [sys.argv[0]]
filename = None

for i in range(1, len(sys.argv)):
    arg = sys.argv[i]
    if arg[:1] == '-':
        # a regular argument to let pass through
        realArgs.append(arg)
    elif arg[:1] == '/':
        # the start of a filename
        if filename is not None:
            realArgs.append(filename)
        filename = arg
    else:
        # it's the continuation of a filename. append and continue...
        if filename is None:
            raise "filenames should be absolute, and arguments should start with '-'."
        else:
            filename = '%s %s' % (filename, arg)

# if any was left on the buffer
if filename is not None:
    realArgs.append(filename)

sys.argv = realArgs

# copied from /usr/local/bin/date-stamp-images
from image_tools.ImageDateStamper import ImageDateStamper
ImageDateStamper().run()

